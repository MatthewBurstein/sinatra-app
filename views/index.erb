
<h1>My name is <%= @cat_name %></h1>
<% if @cat_age %>
<h2>I am <%= @cat_age%></h2>
<% end %>

<img src="http://bit.ly/1eze8aE" alt="pretty cat picture" height="400px"
  style="border:5px red dashed"/>
<br>
<hr>
<form name="form" action="/named-cat" method="GET">
  <input type="text" name="name" placeholder="Enter a cat name">
  <input type="number" name="age" placeholder="Enter the cat's age">
  <input type="submit" value="Submit">
</form>
